<div class="container-fluid bg-light">
  <div class="container">
    <div class="row">

      <div class="col-lg-4 col-12 my-3">
        <div class="card mx-2 mb-2" style="width:15rem;">
        <%= image_tag("parts_example.JPG", alt: "parts_example", size: "238x180")%>
        </div>

        <div class="alert alert-success" role="alert">
          <i class="fas fa-exclamation-triangle"></i>
          <strong>notice</strong>
          <br>
          注意事項入れる
        </div>

      </div>

      <div class="col-lg-5 col-12 my-3">

        <span class="badge badge-pill badge-secondary">
        <% if @autoparts.condition == 0 %>
        Used
        <% elsif @autoparts.condition == 1 %>
        New - Genuine
        <% elsif @autoparts.condition == 2 %>
        new - Reman
        <% end %>
        </span>
        <h1><%= @autoparts.parts_category %></h1>
        <h2 class="text-success">
          <strong>
            Price : <%= number_to_currency(@autoparts.offer_price.initial, :unit => "JPY ", :precision => 0) %>
            <br>
            (<%= number_to_currency(@autoparts.offer_price.initial / 105, :unit => "US$ ") %>)
          </strong>
        </h2>

        <hr>

        <h3 class="mt-3 text-secondary"><strong>Specifications</strong></h3>
        <table class="table table-striped">
          <tbody>
            <tr>
              <th scope="row">Condition</th>
              <td>
                <% if @autoparts.condition == 0 %>
                Used
                <% elsif @autoparts.condition == 1 %>
                New - Genuine
                <% elsif @autoparts.condition == 2 %>
                new - Reman
                <% end %>
              </td>
            </tr>
            <tr>
              <th scope="row">Make</th>
              <td><%= @autoparts.car_brand %></td>
            </tr>
            <tr>
              <th scope="row">Model</th>
              <td><%= @autoparts.car_model %></td>
            </tr>
            <tr>
              <th scope="row">Product</th>
              <td><%= @autoparts.parts_category %></td>
            </tr>
            <tr>
              <th scope="row">Model Code</th>
              <td><%= @autoparts.model_code %></td>
            </tr>
            <tr>
              <th scope="row">Reg. Year/month</th>
              <td><%= @autoparts.registration_year.strftime("%Y/%-m") %></td>
            </tr>
            <tr>
              <th scope="row">Drive</th>
              <td>
              <% if @autoparts.drive == 0 %>
              N/A
              <% elsif @autoparts.drive == 1 %>
              2WD
              <% elsif @autoparts.drive == 2 %>
              4WD
              <% end %>
              </td>
            </tr>
            <tr>
              <th scope="row">Mileage</th>
              <td><%= number_with_delimiter(@autoparts.mileage) %> &nbsp;km</td>
            </tr>
            <tr>
              <th scope="row">Engine Model Code</th>
              <td><%= @autoparts.engine_model_code %></td>
            </tr>
            <tr>
              <th scope="row">Fuel</th>
              <td>
              <% if @autoparts.fuel_type == 0 %>
              N/A
              <% elsif @autoparts.fuel_type == 1 %>
              Gasoline / Petro
              <% elsif @autoparts.fuel_type == 2 %>
              Diesel
              <% end %>
              </td>
            </tr>
            <tr>
              <th scope="row">Mission</th>
              <td>
              <% if @autoparts.mission_type == 0 %>
              N/A
              <% elsif @autoparts.mission_type == 1 %>
              AT
              <% elsif @autoparts.mission_type == 2 %>
              MT
              <% elsif @autoparts.mission_type == 3 %>
              CVT
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-lg-3 col-12 my-3">
        <div class="alert alert-warning text-center" role="alert">
          何か入る
          <br>
          何か入る
          <br>
          何か入る
          <br>
          <button type="button" class="btn btn-warning my-2">
            <strong><i class="fas fa-cart-arrow-down"></i> Add to Cart</strong>
          </button>
        </div>
      </div>

    </div>
  </div>
</div>
