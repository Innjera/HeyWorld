<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to 'HeyWorld', :root, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <% if current_user %>
          <%= link_to "#", class: 'btn btn-primary' do %>
          <%= current_user.email %>様トップページ
          <% end %>
          <% else %>
        <%= link_to :new_user_session, class: 'btn btn-primary' do %>
        Buyers | Sign In
        <% end %>
        <% end %>
        </li>

        &nbsp;&nbsp;

        <li class="nav-item">
        <% if current_seller %>
        <%= link_to sellers_root_path, class: 'btn btn-success' do %>
        <%= current_seller.company_name %>様トップページ
        <% end %>
        <% else %>
        <%= link_to new_seller_session_path, class: 'btn btn-success' do %>
        部品販売企業様はこちら
        <% end %>
        <% end %>
      </ul>
    </div>
  </nav>
  <nav class="navbar navbar-expand-lg bg-dark">
    <ul class="navbar-nav ml-auto">
    <%= link_to "#", class: 'text-white' do %>
    <i class="far fa-bell"></i>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <% end %>
    </ul>

    <ul class="navbar-nav text-white">
      <% if current_seller %>
        <%= link_to destroy_seller_session_path, method: :delete, class: 'text-white' do %>
        <i class="far fa-user-circle"></i>
        Hi <%= current_seller.company_name %>様, ログアウト
        <% end %>
      <% elsif current_user %>
        <%= link_to destroy_user_session_path, method: :delete, class: 'text-white' do %>
        <i class="far fa-user-circle"></i>
        Hi <%= current_user.email %>様, ログアウト
        <% end %>
      <% else %>
        <i class="far fa-user-circle"></i>
      <% end %>
    </ul>
  </nav>

</header>
