<div class="container-fluid">
  <div class="row">
    <nav class="col-2 bg-light sidebar">
      <%= render 'sellers/shared/sidebar' %>
    </nav>
    <main class="col-10">

      <h1 class="text-secondary my-4">入札会一覧</h1>

      <% @tenders.each do |tender| %>
      <div class="tenders w-100 mt-3">
        <%= link_to sellers_tender_path(tender) do %>
        <div class="one-tender bg-light-success text-dark p-2">
          No. <%= tender.id %> |
          開始：<%= tender.starts_at.strftime("%Y年%m月%d日（#{format_wday_ja(tender.starts_at)}）%H:%M") %>、
          終了：<%= tender.ends_at.strftime("%Y年%m月%d日（#{format_wday_ja(tender.starts_at)}）%H:%M") %>
          <br>
          <span class="tender-duration">
            <% if tender.status == "ready" %>
            <span class="badge badge-pill badge-primary">準備完了</span>
            <% else %>
            <span class="badge badge-pill badge-secondary">準備中</span>
            <% end %>
            by <%= tender.seller.company_name %>
          </span>
        </div>
        <% end %>
      </div>
      <% end %>
    </main>
  </div>
</div>
