<div class="container-fluid">
  <div class="row">

    <nav class="col-2 bg-light sidebar">
      <%= render 'sellers/shared/sidebar' %>
    </nav>

    <main class="col-10 ml-sm-auto">

      <div class="mt-3">

        <% if @tender.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <% @tender.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <%= form_for @tender, url: :sellers_tender do |f| %>

        <%= render 'fields', f: f %>

        <div class="form-group mt-5" >
          <%= f.submit "更新する", class: 'btn btn-success' %>
          &nbsp;
          <%= link_to sellers_tender_path(@tender), class: "btn btn-outline-secondary" do %>
          <i class="fas fa-times"></i>&nbsp;キャンセル
          <% end %>
        </div>

        <% end %>
      </div>

    </main>

  </div>
</div>
